{
  "version": "1.1.0",
  "lastUpdated": "2026-01-17",
  "description": "adblockerGPT ad detection rules - ChatGPT focused + all websites",

  "rules": {
    "classPatterns": [
      ".*\\bad[-_]?container.*",
      ".*\\bad[-_]?wrapper.*",
      ".*\\bad[-_]?slot.*",
      ".*\\bad[-_]?banner.*",
      ".*\\bad[-_]?unit.*",
      ".*\\bad[-_]?placement.*",
      ".*\\bad[-_]?block.*",
      ".*\\bad[-_]?frame.*",
      ".*\\bad[-_]?box.*",
      ".*\\bsponsored[-_]?content.*",
      ".*\\bpaid[-_]?promotion.*",
      ".*\\bnative[-_]?ad.*",
      ".*\\bgoogle[-_]?ad.*",
      ".*\\badsense.*",
      ".*\\badsbygoogle.*",
      ".*\\bdoubleclick.*",
      ".*\\btaboola.*",
      ".*\\boutbrain.*",
      ".*\\bmgid.*",
      ".*\\brevcontent.*"
    ],

    "dataAttributes": [
      "data-ad",
      "data-ad-slot",
      "data-ad-client",
      "data-ad-format",
      "data-ad-layout",
      "data-ad-region",
      "data-sponsored",
      "data-promotion",
      "data-advertisement",
      "data-native-ad",
      "data-dfp",
      "data-google-query-id",
      "data-taboola",
      "data-outbrain"
    ],

    "textIndicators": [
      "sponsored",
      "advertisement",
      "promoted",
      "paid partnership",
      "sponsored content",
      "partner content",
      "presented by",
      "brought to you by",
      "ads by google",
      "advertisement"
    ],

    "structuralSelectors": [
      "[class*=\"ad-\"]:not([class*=\"load\"]):not([class*=\"add\"])",
      "[class*=\"-ad\"]:not([class*=\"load\"]):not([class*=\"head\"])",
      "[id*=\"ad-\"]:not([id*=\"load\"]):not([id*=\"add\"])",
      "[id*=\"-ad\"]:not([id*=\"load\"]):not([id*=\"head\"])",
      "[data-testid*=\"ad\"]",
      "[data-testid*=\"sponsor\"]",
      "[aria-label*=\"advertisement\"]",
      "[aria-label*=\"sponsored\"]",
      "iframe[src*=\"doubleclick\"]",
      "iframe[src*=\"googlesyndication\"]",
      "iframe[src*=\"googleads\"]",
      "iframe[src*=\"amazon-adsystem\"]",
      "iframe[src*=\"facebook.com/plugins\"]",
      "ins.adsbygoogle",
      "[id^=\"google_ads_\"]",
      "[id^=\"div-gpt-ad\"]",
      ".taboola-widget",
      ".outbrain-widget",
      "[class*=\"taboola\"]",
      "[class*=\"outbrain\"]",
      "[class*=\"mgid\"]",
      "[class*=\"revcontent\"]",
      "[class*=\"sponsored-post\"]",
      "[class*=\"promoted-post\"]"
    ],

    "chatgptSelectors": [
      "[data-testid*=\"chatgpt-ad\"]",
      "[data-testid*=\"response-ad\"]",
      "[data-testid*=\"sponsored\"]",
      "[data-testid*=\"sponsor\"]",
      "[class*=\"chatgpt-ad\"]",
      "[class*=\"response-ad\"]",
      "[class*=\"conversation-ad\"]",
      "[class*=\"message-ad\"]",
      "[class*=\"sponsored-result\"]",
      "[class*=\"sponsored-card\"]",
      "[class*=\"sponsor-card\"]",
      "[class*=\"ad-card\"]",
      "[class*=\"chat-sponsor\"]",
      "[class*=\"chat-ad\"]",
      ".message-content > [class*=\"sponsor\"]",
      ".message-content > [class*=\"promo\"]",
      "[data-message-author-role=\"assistant\"] [class*=\"ad-\"]",
      "[data-message-author-role=\"assistant\"] [class*=\"sponsor\"]",
      "[data-message-author-role=\"assistant\"] + [class*=\"sponsor\"]",
      "[aria-label*=\"Sponsored\"]",
      "[aria-label*=\"sponsored\"]",
      "[aria-label=\"Sponsored result\"]",
      "[role=\"complementary\"][class*=\"sponsor\"]",
      "[role=\"region\"][class*=\"sponsor\"]",
      "div:has(> span:contains('Sponsored'))",
      "div:has(> div > span:contains('Sponsored'))"
    ],

    "chatgptTextMatchers": [
      "Sponsored",
      "Chat with sponsor",
      "Chat with advertiser",
      "Sponsored result",
      "Promoted",
      "Ad"
    ],

    "googleAdsSelectors": [
      "ins.adsbygoogle",
      "[id^=\"google_ads_\"]",
      "[id^=\"div-gpt-ad\"]",
      "[data-ad-client]",
      "[data-ad-slot]",
      "iframe[src*=\"doubleclick.net\"]",
      "iframe[src*=\"googlesyndication.com\"]",
      "iframe[src*=\"googleadservices.com\"]",
      "iframe[src*=\"googleads.g.doubleclick.net\"]",
      "[class*=\"google-ad\"]",
      "[class*=\"GoogleAd\"]",
      ".adsbygoogle",
      "#google_ads_frame",
      "[id*=\"google_ads_iframe\"]"
    ],

    "socialMediaAdsSelectors": [
      "[data-testid=\"placementTracking\"]",
      "[data-ad-preview]",
      "[class*=\"sponsored\"]",
      "[class*=\"promoted-trend\"]",
      "[class*=\"promoted-tweet\"]",
      "[data-promoted=\"true\"]"
    ],

    "networkBlocklist": [
      "doubleclick.net",
      "googlesyndication.com",
      "googleadservices.com",
      "googleads.g.doubleclick.net",
      "pagead2.googlesyndication.com",
      "adservice.google.com",
      "amazon-adsystem.com",
      "taboola.com",
      "outbrain.com",
      "mgid.com",
      "revcontent.com",
      "criteo.com",
      "adnxs.com",
      "adsrvr.org",
      "rubiconproject.com",
      "pubmatic.com",
      "openx.net",
      "casalemedia.com",
      "advertising.com",
      "adform.net",
      "media.net"
    ],

    "exclusions": [
      ".*\\badd\\b.*",
      ".*\\bload.*",
      ".*\\bhead.*",
      ".*\\bread.*",
      ".*\\bgrad.*",
      ".*\\bpad.*",
      ".*\\bdownload.*",
      ".*\\bupload.*",
      ".*\\bdialog.*",
      ".*\\bthread.*",
      ".*\\bspread.*",
      ".*\\bbadge.*",
      ".*\\bshadow.*",
      ".*\\bleading.*"
    ]
  },

  "placeholders": {
    "enabled": false,
    "message": "Ad removed by adblockerGPT",
    "style": {
      "background": "#f3f4f6",
      "padding": "8px",
      "borderRadius": "4px",
      "fontSize": "12px",
      "color": "#6b7280"
    }
  },

  "settings": {
    "debounceMs": 50,
    "maxRetries": 3,
    "logLevel": "warn",
    "enableVisualHeuristics": true,
    "enablePositionDetection": true,
    "enableNetworkBlocking": true,
    "prioritizeChatGPT": true
  }
}
