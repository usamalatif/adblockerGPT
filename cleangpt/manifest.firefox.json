{
	"manifest_version": 3,
	"name": "adblockerGPT - Ad Blocker for ChatGPT",
	"version": "1.1.0",
	"description": "Block ads on ChatGPT and all websites. Remove Google Ads, banners, pop-ups & trackers. Fast, free & private.",
	"author": "adblockerGPT",
	"homepage_url": "https://www.adblockergpt.com",

	"browser_specific_settings": {
		"gecko": {
			"id": "adblockergpt@adblockergpt.com",
			"strict_min_version": "126.0",
			"data_collection_permissions": {
				"required": ["none"]
			}
		},
		"gecko_android": {
			"strict_min_version": "126.0"
		}
	},

	"permissions": ["storage", "activeTab"],

	"host_permissions": ["<all_urls>"],

	"background": {
		"scripts": ["analytics.js", "background.firefox.js"]
	},

	"content_scripts": [
		{
			"matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
			"js": [
				"content/detector.js",
				"content/remover.js",
				"content/observer.js"
			],
			"css": ["content/styles.css"],
			"run_at": "document_start"
		},
		{
			"matches": ["<all_urls>"],
			"exclude_matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
			"js": [
				"content/detector.js",
				"content/remover.js",
				"content/observer.js"
			],
			"css": ["content/styles.css"],
			"run_at": "document_idle"
		}
	],

	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png",
			"48": "icons/icon-48.png",
			"128": "icons/icon-128.png"
		},
		"default_title": "adblockerGPT"
	},

	"options_page": "options/options.html",

	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},

	"web_accessible_resources": [
		{
			"resources": ["rules/detection-rules.json"],
			"matches": ["<all_urls>"]
		}
	]
}
